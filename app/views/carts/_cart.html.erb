<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h3>Items in Shopping Cart</h3>
<table>
    <% @cart.lineitems.each do |item| %>
    <tr>
        <td><%= item.quantity %></td>
        <td><%= item.product.name %></td>
        <td class="item_price"><%= item.product.price %></td>
    </tr>
    <% end %>
    <tr class="total_price">
        <td colspan=2>Total</td>
        <td><%= @cart.total_price %></td>
    </tr>
</table>
<%# AJAX calls %>
<%= button_to 'Empty Cart', @cart, method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
<%= button_to 'Proceed to Checkout', new_order_path, method: :get, remote: true %>