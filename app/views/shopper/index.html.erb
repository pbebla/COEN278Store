<h1>Product Catalog</h1>


<% @products.each do |product| %>
    <div class="entry">
        <%= image_tag(product.image, class: "img") %>
        <h3><%= product.name %></h3>
        <p><%= sanitize(product.description) %></p>
        <div class="price_line">
            <span class="price">$<%= product.price %></span>
        </div>
        <%# Add to Cart uses AJAX %>
        <%= button_to 'Add to Cart', lineitems_path(product_id: product), class: 'button', remote: true %>
        <%# Shopper's View Button enlarges image %>
        <%= button_to 'View', view_product_path(product), class: 'button', method: :get %>
    </div>
<% end %>
